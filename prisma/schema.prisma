generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


// Blog posts
model Post {
  id String @id @default(uuid())           // UUID primary key
  title String @db.VarChar(255)              // Post title
  content String @db.Text                      // Post content
  thumbnail String?                             // Optional thumbnail URL
  isFeatured Boolean @default(false)            // Featured post flag
  status PostStatus @default(PUBLISHED)        // Post status
  tags String[]                               // Array of tags
  views Int @default(0)                      // View count
  authorId String                          //manage by betterAuth
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comments Comment[]                      // Relation to comments

  @@index([authorId])                    // for querying posts by author
  @@map("posts")                         // Table name
}

// Comments on posts
model Comment {
  id String @id @default(uuid())  // UUID primary key
  content String @db.Text         // Comment content
  authorId String                 //manage by betterAuth
  postId String                   // Foreign key to Post
  post Post @relation(fields: [postId], references: [id])   // Relation to Post
  parentId String?                // Self-referencing foreign key for nested comments
  parent Comment? @relation("CommentToReplies", fields : [parentId], references: [id])
  replies Comment[]  @relation("CommentToReplies") // Relation to replies
  status CommentStatus @default(APPROVED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([postId])  // for querying comments by post
  @@index([authorId]) // for querying comments by author
  @@map("comments") // Table name
}

// Enums
enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
// Enums
enum CommentStatus {
  APPROVED
  REJECTED
}